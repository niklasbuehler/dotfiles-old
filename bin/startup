#!/bin/bash
# script to be executed on i3wm startup

# choose random theme
art -n 'wetleaf'
# reload xresources
xrdb -merge ${HOME}/.Xresources
# refresh colors
i3-msg reload

# load compton
compton --config ${HOME}/.config/compton/compton.conf

# start xautolock
xautolock -detectsleep -notifier "notify-send 'Locking screen in 60s...'" -notify 60 -time 5 -locker ${HOME}/bin/lock/lock

# reload unclutter
killall unclutter &> /dev/null
unclutter -idle 1
