#!/bin/bash
# script to be executed on i3wm startup

# load theme
art &
# reload xresources
xrdb -merge ${HOME}/.Xresources
# refresh colors
i3-msg reload

# load unclutter
unclutter -idle 0.5  &

# load compton
compton --config ${HOME}/.config/compton/compton.conf &

# load dunst
dunst -config ${HOME}/.config/dunst/config &

# load conky
# conky &

# load redshift
redshift -l 49.006889:8.403653 &

# start xautolock
xautolock -detectsleep -time 10 -notifier "notify-send 'Locking screen in 60s' --urgency=normal" -notify 60 -locker ${HOME}/bin/lock/lock &

# start network manager applet
nm-applet &
