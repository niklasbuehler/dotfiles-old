#!/bin/bash
# script to be executed on i3wm startup

# load theme
art
# reload xresources
xrdb -merge ${HOME}/.Xresources
# refresh colors
i3-msg reload

# load unclutter
unclutter -idle 1  &

# load compton
compton --config ${HOME}/.config/compton/compton.conf &

# load dunst
dunst -config ${HOME}/.config/dunst/config &

# start xautolock
xautolock -detectsleep -time 5 -locker ${HOME}/bin/lock/lock &

# start network manager applet
nm-applet
