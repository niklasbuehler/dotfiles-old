#!/bin/bash
# script to be executed on i3wm startup

# choose random theme
art -r
# reload xresources
xrdb -merge ${HOME}/.Xresources
# refresh colors
i3-msg reload

# load compton
compton --config ${HOME}/.config/compton/compton.conf

# start xautolock
xautolock -detectsleep -notify 31 -time 1 -locker ${HOME}/bin/lock/lock

# reload unclutter
killall unclutter &> /dev/null
unclutter -idle 1
