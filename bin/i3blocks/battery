ACPI=$(acpi);
SPLIT=($ACPI);

STATUS=${SPLIT[2]::-1};
PERCENTAGE=${SPLIT[3]::-2};
TIME=${SPLIT[4]::-3};

ICON='';
COLOR=\#FFFFFF;
if [ $PERCENTAGE -ge 75 ]
then
	# >= 75%
	ICON='';
	COLOR=\#00FF00;
elif [ $PERCENTAGE -ge 50 ]
then
	# >= 50%
	ICON='';
	COLOR=\#FFFFFF;
elif [ $PERCENTAGE -ge 25 ]
then
	# >= 25%
	ICON='';
	COLOR=\#FF6633;
else
	# < 25%
	ICON='';
	COLOR=\#FF0000;
fi

if [ $STATUS == 'Charging' ]
then
	# charging
	ICON='';
	STATUS='CHR';
	COLOR=\#00FF00;
else
	# discharging
	STATUS='DIS';
fi

TIME="($TIME";
TIME+="h)";

# fix messed up output of acpi when fully charged
if [ $PERCENTAGE -eq 100 ]
then
	TIME="full"
fi

# full text
echo "$ICON $PERCENTAGE% $TIME";
# short text
echo "$ICON $PERCENTAGE% $TIME";
# color
echo $COLOR;
exit 0;
